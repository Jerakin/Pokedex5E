	gui.set_text(nodes["pokemon/hp_current"], "HP: " .. pokemon.current_hp)
	gui.set_text(nodes["pokemon/hp"], "/ " .. pokemon.HP)
	
	--local p = gui.get_position(nodes["pokemon/hp_current"])
